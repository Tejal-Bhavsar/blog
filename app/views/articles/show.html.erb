<body>
<div class="container">
<p>
<strong>Title:</strong>
<%= @article.title %>
</p>

<p>
<strong>Text:</strong>
<%= @article.text %>
</p>

<h4>Comments</h4>
<% @comments.each do |comment| %>
    <p><%= comment.body %></p>
    <% if comment.commenter? %>
    <p><%= comment.commenter %></p>
    <% else %>
    <p> annonimous </p>
    <% end %>
<% end %>
<h4>Add a comment:</h4>
<%= render 'comments/form' %>

<% if user_signed_in? && @article.user_id == current_user.id %>
<%= link_to 'Edit', edit_article_path(@article) %> |
<% end %>
<%= link_to 'Back', articles_path %>
</div>
</body>
